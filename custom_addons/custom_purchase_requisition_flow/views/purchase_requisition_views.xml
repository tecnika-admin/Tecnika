<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_purchase_requisition_form_custom_flow" model="ir.ui.view">
            <field name="name">purchase.requisition.form.custom.flow</field>
            <field name="model">purchase.requisition</field>
            <field name="inherit_id" ref="purchase_requisition.view_purchase_requisition_form"/>
            <field name="arch" type="xml">

                <xpath expr="//notebook" position="inside">
                    <page string="Facturas de Venta Relacionadas" name="related_customer_invoices">
                        <field name="invoice_ids" context="{'default_move_type': 'out_invoice'}">
                            <list>
                                <field name="name"/>
                                <field name="partner_id"/>
                                <field name="invoice_date"/>
                                <field name="amount_total_signed"/>
                                <field name="state"/>
                                <field name="payment_state"/>
                                <field name="move_type" invisible="1"/>
                            </list>
                            </field>
                    </page>
                </xpath>

                <xpath expr="//field[@name='line_ids']/list/field[@name='product_qty']" position="after">
                    <field name="qty_ordered_calc" string="Cant. Ordenada (Calc)" readonly="1" optional="show"/>
                    <field name="qty_fab" string="En FabricaciÃ³n" readonly="1" optional="show"/>
                    <field name="qty_almmarc" string="Alm. Marca" optional="show"/>
                    <field name="qty_almmay" string="Alm. Mayorista" optional="show"/>
                    <field name="qty_almtec" string="Alm. Tecnika" readonly="1" optional="show"/>
                    <field name="qty_cli" string="Cliente (Fact.)" readonly="1" optional="show"/>
                </xpath>

                 <xpath expr="//field[@name='line_ids']/form//field[@name='product_qty']" position="after">
                     <group>
                         <field name="qty_ordered_calc" readonly="1"/>
                         <field name="qty_fab" readonly="1"/>
                         <field name="qty_almmarc"/>
                         <field name="qty_almmay"/>
                         <field name="qty_almtec" readonly="1"/>
                         <field name="qty_cli" readonly="1"/>
                     </group>
                 </xpath>


            </field>
        </record>

    </data>
</odoo>
