<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_cost_correction_batch_tree" model="ir.ui.view">
            <field name="name">cost.correction.batch.tree</field>
            <field name="model">cost.correction.batch</field>
            <field name="arch" type="xml">
                <tree string="Cost Correction Batches" decoration-info="state=='draft'" decoration-muted="state=='cancel'" decoration-success="state=='done'">
                    <field name="name"/>
                    <field name="create_date"/>
                    <field name="create_uid" widget="many2one_avatar_user"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <field name="state"/>
                    <field name="activity_ids" widget="list_activity"/>
                </tree>
            </field>
        </record>

        <record id="view_cost_correction_batch_form" model="ir.ui.view">
            <field name="name">cost.correction.batch.form</field>
            <field name="model">cost.correction.batch</field>
            <field name="arch" type="xml">
                <form string="Cost Correction Batch">
                    <header>
                         <button name="action_load_lines" string="Load Invoice Lines" type="object" class="btn-primary" states="draft"/>
                         <button name="action_apply_corrections" string="Apply Corrections" type="object" class="btn-primary" states="loaded" data-hotkey="q" confirm="Are you sure you want to apply these cost corrections? This action cannot be easily undone."/>
                         <button name="action_cancel" string="Cancel" type="object" states="draft,loaded" data-hotkey="x"/>
                         <button name="action_draft" string="Set to Draft" type="object" states="cancel" data-hotkey="o"/>
                         <field name="state" widget="statusbar" statusbar_visible="draft,loaded,done"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1><field name="name" readonly="1"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="create_uid" readonly="1"/>
                                <field name="company_id" groups="base.group_multi_company" readonly="1"/>
                            </group>
                            <group>
                                <field name="create_date" readonly="1"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Vendor Bills" name="vendor_bills">
                                <field name="invoice_ids"
                                       widget="many2many"
                                       readonly="state != 'draft'"
                                       options="{'no_create': True, 'no_open': False}">
                                    <tree>
                                        <field name="name"/>
                                        <field name="invoice_date"/>
                                        <field name="partner_id"/>
                                        <field name="amount_total_signed"/>
                                        <field name="state"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Lines to Correct" name="correction_lines">
                                <field name="line_ids"
                                       nolabel="1"
                                       readonly="state not in ('draft', 'loaded')"
                                       context="{'default_batch_id': active_id}">
                                    <tree editable="bottom">
                                        <field name="invoice_id" readonly="1" force_save="1"/>
                                        <field name="product_id" readonly="1" force_save="1"/>
                                        <field name="quantity" readonly="1"/>
                                        <field name="original_cost" readonly="1" force_save="1"/>
                                        <field name="correct_unit_cost" required="1"/>
                                        <field name="adjustment_value" readonly="1" force_save="1"/>
                                        <field name="currency_id" column_invisible="1"/>
                                    </tree>
                                    </field>
                                <div class="oe_grey" invisible="state != 'loaded'">
                                    <i>Please review the original costs and enter the correct unit cost for the lines you wish to adjust.</i>
                                </div>
                            </page>
                        </notebook>
                    </sheet>
                     <chatter>
                        <thread/>
                        <activities/>
                    </chatter>
                </form>
            </field>
        </record>

        <record id="action_cost_correction_batch" model="ir.actions.act_window">
            <field name="name">Cost Correction Batches</field>
            <field name="res_model">cost.correction.batch</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Create a new Cost Correction Batch
              </p><p>
                Select vendor bills and load their lines to adjust inventory costs.
              </p>
            </field>
        </record>

        <menuitem id="menu_cost_correction_batch_root"
                  name="Cost Corrections"
                  parent="account.menu_finance_payables"
                  sequence="100"/>

        <menuitem id="menu_cost_correction_batch_action"
                  name="Correction Batches"
                  parent="menu_cost_correction_batch_root"
                  action="action_cost_correction_batch"
                  sequence="10"/>

    </data>
</odoo>