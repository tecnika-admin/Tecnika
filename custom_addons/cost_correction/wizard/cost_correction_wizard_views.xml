<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_cost_correction_wizard_form" model="ir.ui.view">
            <field name="name">cost.correction.wizard.form</field>
            <field name="model">cost.correction.wizard</field>
            <field name="arch" type="xml">
                <form string="Correct Invoice Line Costs">
                    <group>
                        <field name="invoice_id"/>
                    </group>
                    <notebook>
                        <page string="Lines to Correct" name="correction_lines">
                            <field name="line_ids" nolabel="1">
                                <tree editable="bottom">
                                    <field name="selected"/>
                                    </tree>
                            </field>
                        </page>
                    </notebook>
                    <footer>
                        <button name="action_apply_correction" string="Apply Correction" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_cost_correction_wizard" model="ir.actions.act_window">
            <field name="name">Correct Invoice Line Costs</field>
            <field name="res_model">cost.correction.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="binding_type">action</field>
        </record>

    </data>
</odoo>