<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_move_form_inherit_l10n_mx_edi_link" model="ir.ui.view">
            <field name="name">account.move.form.inherit.l10n.mx.edi.link</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">

                <xpath expr="//header" position="inside">
                    <button name="action_open_associate_cfdi_wizard" string="Asociar CFDI Pago (REP)"           type="object"                             class="btn-primary"                       help="Abre un asistente para seleccionar y asociar un archivo XML de Complemento de Pago (REP) externo a este asiento." invisible="state != 'posted' or l10n_mx_edi_cfdi_state == 'sent' or move_type != 'entry'"
                            />
                    </xpath>

            </field>
        </record>

    </data>
</odoo>
